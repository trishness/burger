<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4 d-flex justify-content-center">BURGERS!</h1>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col">
      <h2 class="d-flex justify-content-center">Burgers that have not been devoured:</h2>
        <ul class="ul">
          {{#each burgers}}
            {{#unless devoured}}
              {{> burgers/burger-block devoured=true}}
            {{/unless}}
          {{/each}}
        </ul>
    </div>
    <div class="col">
      <h2>These burgers were darn tasty!</h2>
        <ul class="ul">
          {{#each burgers}}
            {{#if devoured}}
              {{> burgers/burger-block devoured=false}}
            {{/if}}
          {{/each}}
        </ul>
    </div>
  </div>
</div>
<br>
<br>
<br>
<br>
<div class="container d-flex justify-content-around" id="create">
  <div class="row">
    <div class="col">
      <img src="/assets/img/cheeseburger.jpg" alt="cheeseburger">
    </div>
    <div class="col">
      <h2>Make a new burger</h2>
        <form class="create-form">
          <div class="form-group">
            <label for="ca" class="ul">Burger Name:</label>
              <input type="text" id="ca" name="burger_name">
          </div>
          <div class="form-group">
            <label for="devoured" class="ul">Devoured?</label><br>
            <input type="radio" name="devoured" value="1" checked> Devoured!<br>
            <input type="radio" name="devoured" value="0"> Not Devoured!
          </div>
          <button type="submit" class="btn btn-secondary btn-sm">Add A Burger</button>
        </form>
    </div>
    <div class="col">
      <img src="/assets/img/cheeseburger.jpg" alt="cheeseburger">
    </div>
  </div>
</div>